@model UserRolesViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer

@{
    ViewData["Title"] = "Wijzigen rollen";
}

<h1>@_localizer["Wijzigen Rollen"]</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Roles" asp-controller="Users">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserName" />

            <div class="form-group">
                <b><label asp-for="UserName" class="control-label">@_localizer["Gebruiker"]</label></b>
                <label  class="form-control">@Model.UserName</label>
            </div>
            <div >
                <b><label asp-for="Roles" class="control-label">@_localizer["Rollen"]</label></b>
                <select multiple="multiple" asp-for="Roles" class="form-control" asp-items="ViewBag.AllRoles"></select>
            </div>
            <div class="form-group">
                <input type="submit" value=@_localizer["Bewaren"] class="btn btn-primary" />
            </div>
        </form>

    </div>

</div>
