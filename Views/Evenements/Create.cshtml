@model GroupSpace23.Models.Evenement
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer


@{
    ViewData["Title"] = "Create";
}

<h1>@_localizer["Aanmaken"]</h1>

<h4>@_localizer["Event"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Ended"/>
            <input type="hidden" asp-for="StartedById"/>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label">@_localizer["Wat is jouw event ?"]</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">@_localizer["Hoeveel personen voor het event ?"] </label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Started" class="control-label">@_localizer["Datum van het event ?"]</label>
                <input asp-for="Started" class="form-control" />
                <span asp-validation-for="Started" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">@_localizer["Maken"]</button>

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@_localizer["Terug naar lijst"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
