@model IEnumerable<GroupSpace23.Models.Parameter>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
    ViewData["Title"] = "Index";
}

<h1>@_localizer["Parameters"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @_localizer["Parameter"]
            </th>
            <th>
                @_localizer["Waarde"]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Name">@_localizer["Wijzigen"]</a>
            </td>
         </tr>
}
    </tbody>
</table>
