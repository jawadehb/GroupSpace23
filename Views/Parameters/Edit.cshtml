@model GroupSpace23.Models.Parameter
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
    ViewData["Title"] = "Edit";
}

<h1>@_localizer["Wijzigen"]</h1>

<h4>@_localizer["Parameters"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Name" />
            <input type="hidden" asp-for="Destination" />
            <input type="hidden" asp-for="Obsolete" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="LastChanged" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">@_localizer["Parameter"]</label>
                <label class="form-control" >@Model.Name</label>
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label">@_localizer["Waarde"]</label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">@_localizer["Beschrijving"]</label>
                <input asp-for="Description" class="form-control" Rows="4"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=@_localizer["Bevestig"] class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@_localizer["Terug naar lijst"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
